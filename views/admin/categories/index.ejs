<%- include ('../../partials/header') %>
<%- include ('../../partials/navbar') %>

<div class="container">
    <hr>
    <h2>Categorias</h2>
    <a class="btn btn-primary" href="/admin/categories/new">Criar Nova Categoria</a>
    <hr>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Título</th>
                <th>Slug</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            
            <% categories.forEach(category => { %>
                <tr>
                    <th><%= category.id %></th>
                    <th><%= category.title %></th>
                    <th><%= category.slug %></th>
                    <th>
                        <form method="POST" action="/categories/delete" style="display: inline;">
                            <input type="hidden" name="id">
                            <a href="/admin/categories/edit/<%= category.id %>" class="btn btn-warning">Editar</a>
                        </form>
                        <form method="POST" action="/categories/delete" style="display: inline;" onsubmit="confirmDelete(event, this)">
                            <input type="hidden" name="id" value="<%= category.id %>">
                            <button class="btn btn-danger">Deletar</button>
                        </form>
                    </th>
                </tr>
                <% })%>

        </tbody>
    </table>
</div>

<%- include ('../../partials/footer') %>
<script>
    function confirmDelete(event, form){
        event.preventDefault();
        var decision = confirm("Deseja excluir o lançamento?");
        if(decision){
            form.submit();
        }
    }
</script>